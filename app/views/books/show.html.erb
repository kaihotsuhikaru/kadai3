<%= notice %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @new_book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%=link_to user_path(@book.user.id)do%>
                <%= image_tag @book.user.get_profile_image(80,80) %><br>
                <%= @user.name%>
              <%end%>
            </td>
            <td>
              <%=link_to book_path(@book.id)do%>
                <%= @book.title %>
              <%end%>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user.id == current_user.id %>
              <%= link_to(edit_book_path(@book.id), class:"btn btn-sm btn-success") do %>
                Edit
              <%end%>
              <%end%>
            </td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>